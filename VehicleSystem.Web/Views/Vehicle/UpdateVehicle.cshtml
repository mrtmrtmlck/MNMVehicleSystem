@model VehicleViewModel

<div class="container">
    <h2 class="text-center">Vehicle Registration</h2>
    <hr/>
    <form class="form-horizontal" action="UpdateVehicle" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Plate, new {@class = "col-md-3 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Plate, new {id = "Plate", @class = "form-control"})
            </div>
            <span asp-validation-for="Plate" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NickName, new {@class = "col-md-3 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.NickName, new {id = "NickName", @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Brand, new {@class = "col-md-3 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Brand, new {id = "Brand", @class = "form-control"})
            </div>
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Model, new {@class = "col-md-3 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Model, new {id = "Model", @class = "form-control"})
            </div>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Year, new {@class = "col-md-3 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Year, new {id = "Year", @class = "form-control", @type = "number"})
            </div>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Type, new {@class = "col-md-3 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Type, new {id = "Type", @class = "form-control"})
            </div>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Color, new {@class = "col-md-3 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Color, new {id = "Color", @class = "form-control"})
            </div>
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new {@class = "col-md-3 control-label"})
            <div class="col-md-4">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.IsActive, new {id = "IsActicve", @type = "checkbox"})
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-2">
                <button type="submit" class="btn btn-primary btn-lg">Save</button>
            </div>
        </div>
    </form>
</div>
<div>
    <a class="btn btn-info" href='@Url.Action("VehicleList", "Vehicle")'>
        <i class="fa fa-arrow-left"></i> Back To List
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}